<div role="document" class="page">
  {%  if page.header %}
    <header id="site-header">
      <div class="outer-wrapper">
        {{ page.header }}
      </div>
    </header>
  {% endif %}

  {%  if page.featured %}
    <section id="featured">
      <div class="columns">
        {{ page.featured }}
      </div>
    </section>
  {% endif %}

  {% if messages %}
    <section id="messages">
      <div class="outer-wrapper">
        {{ messages }}
      </div>
    </section>
  {% endif %}

  {% if breadcrumb %}
    <section id="breadcrumb">
      <div class="outer-wrapper">
        {{ breadcrumb }}
      </div>
    </section>
  {% endif %}

  <main role="main">
    {% if page.sidebar_first %}
      <aside id="sidebar-first" role="complementary" class="sidebar">
        {{ page.sidebar_first }}
      </aside>
    {% endif %}

    <section id="content">
      {% if title %}
        {{ title_prefix }}
          <h1 id="page-title">{{ title }}</h1>
        {{ title_suffix }}
      {% endif %}

      {% if tabs %}
        {{ tabs }}
        {% if tabs2 %}
          {{ tabs2 }}
        {% endif %}
      {% endif %}

      {% if action_links %}
        <ul class="action-links">
          {{ action_links }}
        </ul>
      {% endif %}

      {{ page.content }}
    </section>

    {% if page.sidebar_second %}
      <aside id="sidebar-second" role="complementary" class="sidebar">
        {{ page.sidebar_second }}
      </aside>
    {% endif %}
  </main>

  <footer id="site-footer" role="contentinfo">
    {% if page.footer_top %}
      <section class="footer-top">
        {{ page.footer_top }}
      </section>
    {% endif %}

    <section class="footer-bottom">
      <div class="copyright">
        <p>
          &copy; {{ "now"|date("Y") }} {{ linked_site_name }} {{ "All rights reserved."|t }}
        </p>
      </div>

      <div class="utility-menu">
        <ul>
          <li><a href="/">Privacy Policy</a></li>
          <li><a href="/">Terms of Service</a></li>
        </ul>
      </div>
    </section>
  </footer>
</div>